{
  "name": "sisterSafe",
  "version": "0.1.0",
  "description": "A miniapp to share location safely",
  "private": true,
  "scripts": {
    "build": "pnpm --filter web build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "contracts:compile": "turbo run compile --filter=hardhat",
    "contracts:test": "turbo run test --filter=hardhat",
    "contracts:deploy": "turbo run deploy --filter=hardhat",
    "contracts:deploy:alfajores": "turbo run deploy:alfajores --filter=hardhat",
    "contracts:deploy:sepolia": "turbo run deploy:sepolia --filter=hardhat",
    "contracts:deploy:celo": "turbo run deploy:celo --filter=hardhat"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "ngeohash": "^0.6.3"
  }
}
